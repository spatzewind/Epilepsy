<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="3.0"
            android:shape="ring"
            android:useLevel="true"
            android:thicknessRatio="14.0" >
            <gradient
                android:startColor="@color/light_gray"
                android:centerColor="@color/mid_gray"
                android:endColor="@color/light_gray"
                android:type="radial"
                android:gradientRadius="50%" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270" >
            <shape
                android:innerRadiusRatio="3.0"
                android:shape="ring"
                android:useLevel="true"
                android:thicknessRatio="14.0" >
                <gradient
                    android:startColor="@color/light_violet"
                    android:centerColor="@color/mid_violet"
                    android:endColor="@color/dark_violet"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>